<swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}" duration="{{1000}}" >
  <block wx:for="{{lists}}" wx:key="story_id">
    <swiper-item>
      <image src="{{item.cover_url}}" class="slide-image" width="749rpx" height="528rpx"/>
    </swiper-item>
  </block>
</swiper>
<view class="null" />
<view class='list' wx:for="{{lists}}" wx:key="id">
  <view class='lchild' bindtap="comfirm1" data-id="{{item.story_id}}">
    <image src="https://img2020.cnblogs.com/blog/2146164/202011/2146164-20201123205305519-1354017804.png" class="icon-url"/>
    <text class="story-name">{{item.story_name}}</text>
    <view class='arrow'></view>
    <view class='null'></view>
 </view>
 </view>
